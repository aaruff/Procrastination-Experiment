<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>View Treatments</title>
    <link rel="stylesheet" type="text/css" href="{{ baseUrl }}/js/release-datatables/media/css/site_jui.css">
    <link rel="stylesheet" type="text/css" href="{{ baseUrl }}/js/release-datatables/media/css/demo_table_jui.css">
    <link rel="stylesheet" type="text/css" href="{{ baseUrl }}/js/ui/css/smoothness/jquery-ui-1.8.11.custom.css">
    <style type="text/css" media="screen">
        /*
         * Override styles needed due to the mix of three different CSS sources! For proper examples
         * please see the themes example in the 'Examples' section of this site
         */
        .dataTables_info { padding-top: 0; }
        .dataTables_paginate { padding-top: 0; }
        .css_right { float: right; }
        #example_wrapper .fg-toolbar { font-size: 0.8em }
        #theme_links span { float: left; padding: 2px 10px; }
    </style>

    <script type="text/javascript" language="javascript" src="{{ baseUrl }}/js/ui/js/jquery-1.5.1.min.js"></script>
    <script type="text/javascript" language="javascript" src="{{ baseUrl }}/js/release-datatables/media/js/jquery.dataTables.min.js"></script>
    <link href='{{ baseUrl }}/css/view_subjects.css' rel='stylesheet' type='text/css' />
    <script type="text/javascript" charset="utf-8">
        $(document).ready( function() {
            $('#subjects').dataTable( {
                "bJQueryUI": true,
                "sPaginationType": "full_numbers"
            } );
        } );
    </script>
</head>
<body>
<div id="parent_container">
    <div id="navigation">
        <ul>
            <li><a href="{{ baseUrl }}/experiment/session"><img src="{{ baseUrl }}/img/add_treatment.png"/>New Treatment</a></li>
            <li><a href="{{ baseUrl }}/experiment/session/data"><img src="{{ baseUrl }}/img/add_doc.png"/>Output File</a></li>
        </ul>
    </div>

    <div id="content">
        <label><h2>Experiment Dashboard</h2></label>
        <div id="heading">
        </div>
        <form action="/procrastination/experimenter/manageParticipants.php" method="post">
            <table id="subjects">
                <thead>
                <tr>
                    <th>Treatment ID</th><th>Subject ID</th><th>Login</th><th>Password</th>
                    <th>Email</th><th>Survey Status</th><th>Experimenter Deadlines</th><th>Subject Deadlines Enabled</th>
                    <th>Subject Deadlines</th><th>Problem Time Restriction</th><th>Reminders Enabled</th><th>Email Delivery Time</th>
                    <th>Reminder Cost</th><th>First Task Completed</th>
                </tr>
                </thead>
                <tbody>
                 {%  for subjects in subject %}
                <tr>
                    <td>{{ subject['treatment_id'] }}</td>
                    <td>{{ subject['id'] }}</td>
                    <td>{{ subject['login'] }}</td>
                    <td>{{ subject['password'] }}</td>
                    <td>{{ subject['email'] }}</td>
                    <td>{{ subject['survey_status'] }}</td>
                    <td>{{ subject['first_experimenter_set_deadline'] }}</td>
                    <td>{{ subject['subject_deadline_enabled'] }}</td>
                    <td>{{ subject['first_subject_set_deadline'] }}</td>
                    <td>{{ subject['problem_time_limit'] }}</td>
                    <td>{{ subject['enable_reminder_notification'] }}</td>
                    <td>{{ subject['reminder_delivery_time'] }}</td>
                    <td>{{ subject['reminder_cost'] }}</td>
                    <td>{{ subject['first_task_completed'] }}</td>
                </tr>
                {%  endfor %}
                </tbody>
            </table>
        </form>
    </div>
</div>
</body>
</html>


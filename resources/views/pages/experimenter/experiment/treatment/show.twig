{% extends 'pages/experimenter/experiment/master.twig' %}

{% block body %}
    {% include 'pages/experimenter/experiment/navbar.twig' %}
    <div class="container">

        <div class="page-header">
            <h3>Treatment {{ treatment.id }}: Subjects</h3>
        </div>

        <table class="table table-striped" id="subjects">
            <thead>
            <tr>
                <th>Login</th><th>Status</th>
            </tr>
            </thead>
            <tbody>
            {%  for row in rowData %}
                <tr>
                    <td>{{ row.user.login }}</td>
                    <td>{{ row.subject.state }}</td>
                </tr>
            {%  endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

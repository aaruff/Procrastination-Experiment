{% extends 'pages/user/master.twig' %}
{% block body %}

<div class="container">
    <div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="false">
        {%  if errors %}
            <div class="alert alert-danger">
                <strong>Whoops!</strong> There were some problems with your input.<br><br>
                <ul>
                    {% for error in flash.errors.sematic %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="text-center">Login</h1>
                </div>
                <div class="modal-body">
                    <form class="form col-md-12 center-block" action="{{ currentUrl() }}" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control input-lg" placeholder="Login" name="login" value="{{  flash.login  }}">
                            {%  if flash.errors.login %}
                                <div class="alert alert-danger">
                                    <ul>
                                        {% for error in flash.errors.login %}
                                            <li>{{ error }}</li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            {% endif %}
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control input-lg" placeholder="Password" name="password">
                            {%  if flash.errors.password %}
                                <div class="alert alert-danger">
                                    <ul>
                                        {% for error in flash.errors.password %}
                                            <li>{{ error }}</li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            {% endif %}
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-lg btn-block">Sign In</button>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

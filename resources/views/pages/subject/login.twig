{% extends 'pages/subject/master.twig' %}
{% block body %}

    <div class="container">
        <div class="page-header">
            <h3>Login</h3>
        </div>
        <div class="jumbotron">
            {%  if errors %}
                <div class="alert alert-danger">
                    <strong>Whoops!</strong> There were some problems with your input.<br><br>
                    <ul>
                        {% for error in errors %}
                            <li>{{ error }}</li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}

            <form class="form-horizontal" action="{{ currentUrl() }}" method="post">

                <div class="form-group">
                    <label class="col-xs-3 control-label">Login</label>
                    <div class="col-xs-9">
                        <input type="text" class="form-control dt" name="login" value="{{  login  }}" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-xs-3 control-label">Password</label>
                    <div class="col-xs-9">
                        <input type="password" class="form-control dt" name="password" value="{{  password  }}" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-offset-3 col-xs-8">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

{% extends 'pages/subject/master.twig' %}

{% block body %}
<div class="container">
    <div class="jumbotron">
        <form action="{{ currentUrl() }}" method="post">
            <div class="form-group">
                <label>Your Major</label>
                <input type="text" class="form-control" name="major"/>
            </div>

            <div class="form-group">
                <label class="question">Your GPA</label>
                <input type="text" class="form-control" name="gpa" />
            </div>

            <div class="form-group">
                <label class="question">Number of courses you are attending</label>
                <input type="text" class="form-control" name="number_courses" />
            </div>

            <div class="form-group">
                <label class="question">Number of club you are affiliated with</label>
                <input type="text" class="form-control" name="number_clubs" />
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">Next</button>
            </div>
        </form>
    </div>

</div>
{% endblock %}

{% extends 'pages/subject/master.twig' %}

{% block body %}
<div class="container">
    <div class="page-header">
        <h3>Experiment Survey</h3>
    </div>

    <div class="row">
        <form action="{{ currentUrl() }}" method="post">
            <div class="form-group">
                <label>What is your major?</label>
                <input type="text" class="form-control" name="major"/>
            </div>

            <div class="form-group">
                <label class="question">What is your GPA?</label>
                <input type="text" class="form-control" name="gpa" />
            </div>

            <div class="form-group">
                <label class="question">How many courses are you taking?</label>
                <input type="text" class="form-control" name="course_load" />
            </div>

            <div class="form-group">
                <label class="question">How many clubs do you belong to (e.g., social, academic, sports, etc)?</label>
                <input type="text" class="form-control" name="clubs" />
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">Next</button>
            </div>
        </form>
    </div>

</div>
{% endblock %}
